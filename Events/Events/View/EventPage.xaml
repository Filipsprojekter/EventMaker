<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Events.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModel="using:Events.ViewModel"
    x:Class="Events.View.EventPage"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.DataContext>
            <ViewModel:EventViewModel/>
        </Grid.DataContext>
        <ListView x:Name="LstEvents" HorizontalAlignment="Left" Height="694" Margin="831.284,124,0,0" VerticalAlignment="Top" Width="521.188" RenderTransformOrigin="0.5,0.5" UseLayoutRounding="False" d:LayoutRounding="Auto" ItemsSource="{Binding EventCatalogSingleton}">
            <ListView.RenderTransform>
                <CompositeTransform SkewX="0.16" TranslateX="0.497"/>
            </ListView.RenderTransform>
        </ListView>
        <Button x:Name="btnAdd" Content="Add event" HorizontalAlignment="Left" Height="48" Margin="386,466,0,0" VerticalAlignment="Top" Width="132"/>
        <Button x:Name="btnRemove" Content="Remove event" HorizontalAlignment="Left" Height="48" Margin="218,466,0,0" VerticalAlignment="Top" Width="132"/>

    </Grid>
</Page>
